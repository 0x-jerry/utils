{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": [
      "DOM"
    ],
    "skipDefaultLibCheck": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "test"
  ]
}
